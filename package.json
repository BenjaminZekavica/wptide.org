{
  "name": "tide-faas",
  "version": "0.0.1",
  "description": "Implementation of Tide API using OCF",
  "main": "src/index.js",
  "scripts": {
    "start": "functions-framework --target=TideAPI --signature-type=http",
    "start:lighthouse": "cd src/event-handlers/lighthouse && functions-framework --target=lighthouseAudit --signature-type=event --port 8090",
    "start:local-proxy": "cd src/event-handlers && node localTesting.js",
    "start:emulator:datastore": "gcloud beta emulators datastore start --no-store-on-disk",
    "start:emulator:pubsub": "gcloud beta emulators pubsub start",
    "start:audit-response": "cd src/event-handlers/audit-response && functions-framework --target=auditResponse --signature-type=event --port 8100",
    "start:phpcs": "cd src/event-handlers/phpcs && functions-framework --target=phpcsAudit --signature-type=event --port 8110",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint"
    ],
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivankruchkoff/tide-faas.git"
  },
  "author": "XWP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xwp/tide-faas/issues"
  },
  "homepage": "https://github.com/xwp/tide-faas#readme",
  "dependencies": {
    "@google-cloud/datastore": "^6.2.0",
    "@google-cloud/functions-framework": "^1.7.1",
    "@google-cloud/pubsub": "^2.6.0",
    "chrome-launcher": "^0.13.4",
    "crypto-js": "^4.0.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "invariant": "^2.2.4",
    "lighthouse": "^6.4.1",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "puppeteer": "^5.4.1",
    "rimraf": "^3.0.2",
    "swagger-routes-express": "^3.2.1",
    "yamljs": "^0.3.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "lint-staged": "^10.5.1",
    "stylelint": "^13.7.2"
  }
}
