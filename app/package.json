{
  "name": "tide-api",
  "version": "1.0.0",
  "description": "Node setup for the Tide Cloud Functions API",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=tide --signature-type=http",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --detectOpenHandles --forceExit --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "author": "XWP",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/datastore": "^6.2.0",
    "@google-cloud/functions-framework": "^1.7.1",
    "@google-cloud/pubsub": "^2.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "invariant": "^2.2.4",
    "node-fetch": "^2.6.1",
    "swagger-routes-express": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^30.7.8",
    "husky": "^4.3.0",
    "jest": "^26.6.3"
  }
}
