{
  "functions": {
    "source": "app"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "web/.vuepress/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1",
        "function": "api"
      },
      {
        "source": "/api/v1/**",
        "function": "api"
      },
      {
        "source": "/api/spec/v1",
        "function": "spec"
      },
      {
        "source": "/api/spec/v1/**",
        "function": "spec"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": "5001"
    },
    "functions": {
      "port": "5002"
    },
    "pubsub": {
      "port": "5003"
    }
  }
}
