{
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "plugin:jsdoc/recommended"
    ],
    "ignorePatterns": ["**/vendor/**"],
    "rules": {
        "no-console": "off",
        "indent": ["error", 4],
        "jsdoc/check-line-alignment": [
            "error",
            "always"
        ],
        "jest/no-jasmine-globals": "off"
    },
    "parser": "babel-eslint",
    "env": {
        "jest": true
    }
}
